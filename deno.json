{
	"compilerOptions": {
		"lib": ["deno.ns", "dom"]
	},
	"tasks": {
		"start:full": "deno task build && deno serve -A --env --watch src/server.ts",
		"start:server": "deno serve -A --env --watch src/server.ts",
		"dev": "vite",
		"build": "tsc && vite build --emptyOutDir",
		"preview": "vite preview"
	},
	"imports": {
		"@hono/hono": "jsr:@hono/hono@^4.10.4",
		"@std/assert": "jsr:@std/assert@^1.0.15",
		"@@utils/": "./src/utils/"
	},
	"fmt": {
		"indentWidth": 4,
		"semiColons": true,
		"singleQuote": true,
		"useTabs": true
	}
}
